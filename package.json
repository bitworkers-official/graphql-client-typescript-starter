{
  "name": "graphql-client-typescript-starter",
  "version": "1.0.0",
  "description": "Starter template for a GraphQL & Typescript server",
  "main": "api/index.ts",
  "scripts": {
    "start": "npm run build && node dist/api/index.js",
    "dev": "nodemon --watch api --exec ts-node api/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "update-schema": "graphql get-schema"
  },
  "keywords": [
    "graphql",
    "typescript"
  ],
  "author": "Bitworkers",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.1.27",
    "cross-fetch": "^3.0.0",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1"
  },
  "devDependencies": {
    "eslint": "5.14.1",
    "eslint-config-bitworkers": "1.17.0",
    "eslint-plugin-graphql": "3.0.3",
    "graphql-cli": "3.0.10",
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "prettier-config-bitworkers": "1.5.0",
    "ts-node": "8.0.2",
    "typescript": "3.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
